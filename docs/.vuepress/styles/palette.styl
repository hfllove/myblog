$mediumZoomZIndex = 10000
$readingBgColor = transparent
$readingZIndex = 1000
$readingSize = 3px
$readingProgressColor = $accentColor
$readingProgressImage = linear-gradient(-120deg, #E50743 0%, #F9870F 15%, #E8ED30 30%, #3FA62E 45%, #3BB4D7 60%, #2F4D9E 75%, #71378A 80%)

.home .features {
    justify-content: space-evenly;
}


.navbar .links {
    right: 4.5rem;
}
.sidebar-sub-headers a.sidebar-link {
    transition: all .3s ease-in-out;
}
.sidebar-sub-headers a.sidebar-link.active  {
    background-image: linear-gradient(to left, #87CEFA 0%, #fff 100%);
    font-size: 1.1em;
}


.viewer-toolbar > ul > li {
    background-color: rgba(0, 0, 0, 50%);
    border-radius: 50%;
    cursor: pointer;
    margin: 0 5px;
    float: left;
    height: 32px;
    overflow: hidden;
    transition: background-color 0.15s;
    width: 32px;
}
.viewer-toolbar > ul > li + li {
    margin-left: 5px;
}
.viewer-prev,.viewer-next,.viewer-rotate-left,.viewer-navbar {
    display: none;
}
.viewer-zoom-in::before {
    background-position: 4px 3px;
    content: "Zoom In";
}
.viewer-zoom-out::before {
    background-position: -16px 3px;
    content: "Zoom Out";
}
.viewer-one-to-one::before {
    background-position: -36px 3px;
    content: "One to One";
}
.viewer-reset::before {
    background-position: -56px 3px;
    content: "Reset";
}
.viewer-toolbar > ul > .viewer-large {
    height: 30px;
    margin-bottom: 0px;
    margin-top: 0px;
    width: 30px;
    display:none;
}
.viewer-rotate-left::before {
    background-position: -136px 3px;
    content: "Rotate Left";
}
.viewer-rotate-right::before {
    background-position: -156px 3px;
    content: "Rotate Right";
}
.viewer-list {
    box-sizing: content-box;
    height: 50px;
    margin: 0;
    overflow: hidden;
    padding: 1px 0;
}
.viewer-list > li {
    color: transparent;
    cursor: pointer;
    float: left;
    margin: 0;
    padding-left: 10px;
    padding-right: 10px;
    font-size: 0;
    height: 50px;
    line-height: 0;
    opacity: 0.5;
    overflow: hidden;
    transition: opacity 0.15s;
    width: 30px;
}
.viewer-toolbar > ul {
    display: inline-block;
    margin: 0 auto 50px;
    overflow: hidden;
    padding: 6px 3px;
}

.theme-default-content pre code, .theme-default-content pre[class*="language-"] code {
    color: #fff;
    padding: 0;
    background-color: transparent;
    border-radius: 0;
    font-weight: 500;
}

.theme-default-content code {
    color: #476582;
    padding: 0.25rem 0.5rem;
    margin: 0;
    font-size: 1em;
    background-color: rgba(27,31,35,0.05);
    border-radius: 3px;
}

code[class*="language-"], pre[class*="language-"] {
    color: #ccc;
    background: none;
    font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
    font-size: 1em;
    text-align: left;
    white-space: pre;
    word-spacing: 0.02em;
    word-break: normal;
    word-wrap: normal;
    line-height: 1.5;
    -moz-tab-size: 4;
    -o-tab-size: 4;
    tab-size: 2;
    -webkit-hyphens: none;
    hyphens: none;
}