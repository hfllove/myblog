

.theme-default-content:not(.custom) > *:first-child {
    margin-top: 2.5rem;
}

h2 {
    font-size: 1.6rem;
    padding-bottom: 0.3rem;
    border-bottom: 1px solid #eaecef;
}
.sidebar {
    font-size: 16px;
    background-color: rgba(255,255,255,0.9);
    width: 20rem;
    position: fixed;
    z-index: 10;
    margin: 0;
    top: 3.6rem;
    left: 0;
    bottom: 0;
    box-sizing: border-box;
    border-right: 1px solid #eaecef;
    overflow-y: auto;
}
.page {
    padding-left: 0rem;
}

.theme-default-content:not(.custom) > h1:first-child, .theme-default-content:not(.custom) > h2:first-child, .theme-default-content:not(.custom) > h3:first-child, .theme-default-content:not(.custom) > h4:first-child, .theme-default-content:not(.custom) > h5:first-child, .theme-default-content:not(.custom) > h6:first-child {
    margin-top: -2.5rem;
    margin-bottom: 1rem;
}

.custom-block
  &.note
    color transparentify($textColor, 0.6)
    font-size 1rem
    text-align left
    padding: 0.1rem 1.5rem;
    border-left-width: 0.5rem;
    border-left-style: solid;
    margin: 1rem 0;
    background-color: #f3f5f7;
    border-color: skyblue;
    .custom-block
        &-title
            color: skyblue;
            font-weight: 600; 
            margin-bottom: -0.4rem;

.custom-block
  &.test
    color transparentify($textColor, 0.6)
    font-size 1rem
    text-align left
    padding: 0.1rem 1.5rem;
    border-left-width: 0.5rem;
    border-left-style: solid;
    margin: 1rem 0;
    background-color: #f3f5f7;
    border-color: #ff4500;
    .custom-block
        &-title
            color: #ff4500;
            font-weight: 600; 
            margin-bottom: -0.4rem;

code, kbd, .line-number {
    font-family: Cascadia Code,source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace;
}

strong {
    font-weight: 600;
    border-bottom: 3px solid #ff4500;
    color: #2c3e50;
}

p>i {
    background-color: skyblue;
}